@model TipMvcApp.Models.TicketType

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>TicketType</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TicketTypeId" class="control-label"></label>
                <select asp-for="TicketTypeId" class="form-control">
                    @foreach (SelectListItem ticketlist in await Helper.GetAllTicketTypes())
                    {
                        <option value="@ticketlist.Value">@ticketlist.Text</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="TicketTypeName" class="control-label"></label>
                <input asp-for="TicketTypeName" class="form-control" />
                <span asp-validation-for="TicketTypeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AssignedToEmpId" class="control-label"></label>
                <select asp-for="AssignedToEmpId" class="form-control">
                    @foreach (SelectListItem emplist in await Helper.GetAllEmployees())
                    {
                        <option value="@emplist.Value">@emplist.Text</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="PriorityId" class="control-label"></label>
                <select asp-for="PriorityId" class="form-control">
                    @foreach (SelectListItem prilist in await Helper.GetAllPriorities())
                    {
                        <option value="@prilist.Value">@prilist.Text</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a type="submit" class="btn btn-outline-primary" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
