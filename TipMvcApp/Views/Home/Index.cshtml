@{
    ViewData["Title"] = "AllCloud Ticketing Portal";
}

<!-- Custom styles -->
<style>
    body {
        background-color: #f4f6f9;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .hero-section {
        position: relative;
        background: url("https://www.google.com/url?sa=i&url=https%3A%2F%2Fwww.facebook.com%2FAllCloudIndia%2F&psig=AOvVaw2LZx_8ugOYA4iRt3bbWMDl&ust=1724841330561000&source=images&cd=vfe&opi=89978449&ved=0CBIQjRxqFwoTCIiu6er8lIgDFQAAAAAdAAAAABAEhttps://media-exp1.licdn.com/dms/image/C510BAQExIHFQvmGQYg/company-logo_200_200/0?e=2159024400&v=beta&t=L7OalUNQEYNxjHheTKsboy8fra8HeRp2V4Ul2Yf0cQw") no-repeat center center;
        background-size: cover;
        color: white;
        padding: 60px 0;
        text-align: center;
        border-radius: 0 0 50px 50px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    }

        .hero-section::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.5); /* Dark overlay to ensure text readability */
            border-radius: 0 0 50px 50px;
        }

        .hero-section h1,
        .hero-section p {
            position: relative;
            z-index: 1;
        }

        .hero-section h1 {
            font-size: 3.5rem;
            font-weight: 800;
            margin-bottom: 20px;
        }

        .hero-section p {
            font-size: 1.2rem;
            margin-bottom: 30px;
        }

    .card-container {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: -50px;
    }

    .card {
        flex: 1;
        max-width: 350px;
        background-color: #ffffff;
        border: none;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

        .card:hover {
            transform: translateY(-10px);
        }

    .card-body {
        padding: 30px;
        text-align: center;
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 15px;
    }

    .card-text {
        font-size: 1rem;
        color: #555;
    }

    .footer {
        background-color: #343a40;
        color: white;
        padding: 20px 0;
        text-align: center;
        border-radius: 50px 50px 0 0;
        box-shadow: 0 -5px 15px rgba(0, 0, 0, 0.2);
        margin-top: 50px;
    }

        .footer p {
            margin: 0;
        }
</style>

<div class="hero-section">
    <h1 class="display-4">Welcome to AllCloud Ticketing Portal</h1>
    <p class="lead">Efficiently manage your IT support and service requests</p>
</div>

<div class="container card-container">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Submit a New Ticket</h5>
            <p class="card-text">Having an issue? Submit a new ticket for quick resolution.</p>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">View Your Tickets</h5>
            <p class="card-text">Track the status of your submitted tickets.</p>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Manage Your Profile</h5>
            <p class="card-text">Update your contact information and preferences.</p>
        </div>
    </div>
</div>

<footer class="footer">
    <p>&copy; @DateTime.Now.Year AllCloud. All rights reserved.</p>
</footer>