@model IEnumerable<TipMvcApp.Models.TicketFollowUp>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="~/css/StyleSheet.css" />
<h1>Index</h1>

<p>
    <a type="submit" class="btn btn-primary" asp-action="Create">Add Followup</a>
</p>
<table class="table table-hover table-striped table-bordered">
    <thead class="thread-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TicketId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SrNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Remarks)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdatedDate)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TicketId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SrNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Remarks)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdatedDate)
                </td>
            <td>
                    @Html.ActionLink("Edit", "Edit", new { ticketId = item.TicketId, srNo = item.SrNo }, new { @class = "btn btn-outline-primary" }) |
                    @Html.ActionLink("Details", "Details", new { ticketId = item.TicketId, srNo = item.SrNo }, new { @class = "btn btn-outline-primary" }) |
                    @Html.ActionLink("Date", "ByDate", new { updatedDate = item.UpdatedDate }, new { @class = "btn btn-outline-primary" }) |
                    @Html.ActionLink("Status", "ByStatus", new { status = item.Status }, new { @class = "btn btn-outline-primary" }) |
                    @Html.ActionLink("Ticket", "ByTicketId", new { ticketId = item.TicketId }, new { @class = "btn btn-outline-primary" }) |
                    @Html.ActionLink("Delete", "Delete", new { ticketId = item.TicketId, srNo = item.SrNo }, new { @class = "btn btn-outline-danger" })
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a type="submit" class="btn btn-outline-primary" asp-controller="Home" asp-action="Index">Home</a>
</div>
